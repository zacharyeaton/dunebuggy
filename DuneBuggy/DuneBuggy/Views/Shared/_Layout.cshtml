<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    
    @Styles.Render("~/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navigation">   
        <div class="content">
            <div class="navigation-side">                
                @Html.ActionLink("Dune Buggys Uk", "Index", "Home", new { area = "" }, new { @class = "navigation-home" })
            </div>
            <div class="topnav" id="myTopnav">                  

                @Html.ActionLink("Home", "Index", "Home")
                @Html.ActionLink("Products", "Index", "Products")
                @Html.ActionLink("Contact", "Contact", "Home")
                
                <a href="javascript:void(0);" class="icon" onclick="responsiveFunction()">&#9776;</a>
                @if (Request.IsAuthenticated)
                {
                    @Html.ActionLink("Sign Out", "Logout", "Users")
                    <a href="javascript:void(0);" class="welcome">Welcome back, @Html.Encode(User.Identity.Name)</a>
                }
                else
                {
                    @Html.ActionLink("Login", "Login", "Users")
                } 
            </div>
        </div>
    </div>
    <div class="content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Dune Buggy Uk</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")   
    @RenderSection("scripts", required: false)
    <script type="text/javascript">
        
        function responsiveFunction() {
            var x = document.getElementById("myTopnav");
            if (x.className === "topnav") {
                x.className += " responsive";
            } else {
                x.className = "topnav";
            }
        }
    </script>
</body>
</html>

